{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm-run-all --parallel dev:frontend dev:backend dev:css",
		"dev:frontend": "vite",
		"dev:backend": "convex dev",
		"dev:css": "pnpm dlx @tailwindcss/cli -i ./src/tailwind.css -o ./src/tw.css --watch",
		"prebuild": "pnpm tw:build",
		"tw:build": "pnpm dlx @tailwindcss/cli -i ./src/tailwind.css -o ./src/tw.css --minify",
		"build": "vite build",
		"preview": "vite preview"
	},
	"dependencies": {
		"@radix-ui/react-slot": "1.2.3",
		"@uidotdev/usehooks": "2.4.1",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"convex": "1.25.4",
		"lucide-react": "0.544.0",
		"preact": "10.27.0",
		"tailwind-merge": "3.3.1",
		"tailwindcss-animate": "1.0.7"
	},
	"devDependencies": {
		"@preact/preset-vite": "2.10.2",
		"@types/react": "19.1.9",
		"@types/react-dom": "19.1.7",
		"npm-run-all": "4.1.5",
		"tailwindcss": "4.1.11",
		"typescript": "5.9.2",
		"vite": "7.1.1",
		"vite-plugin-compression": "0.5.1"
	}
}
